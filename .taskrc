##  sebastian's taskrc  ##
##########################

# Here is an example of entries that use the default, override and blank values
#   variable=foo   -- By specifying a value, this overrides the default
#   variable=      -- By specifying no value, this means no default
#   #variable=foo  -- By commenting out the line, or deleting it, this uses the default
# Use the command 'task show' to see all defaults and overrides
# Files
data.location=~/.task
# Color theme (uncomment one to use)
#include /usr/share/doc/task/rc/light-16.theme
#include /usr/share/doc/task/rc/light-256.theme
#include /usr/share/doc/task/rc/dark-16.theme
#include /usr/share/doc/task/rc/dark-256.theme
#include /usr/share/doc/task/rc/dark-red-256.theme
#include /usr/share/doc/task/rc/dark-green-256.theme
#include /usr/share/doc/task/rc/dark-blue-256.theme
#include /usr/share/doc/task/rc/dark-violets-256.theme
#include /usr/share/doc/task/rc/dark-yellow-green.theme
#include /usr/share/doc/task/rc/dark-gray-256.theme
#include /usr/share/doc/task/rc/dark-gray-blue-256.theme
#include /usr/share/doc/task/rc/solarized-dark-256.theme
#include /usr/share/doc/task/rc/solarized-light-256.theme
#include /usr/share/doc/task/rc/no-color.theme
color=on

# InstantOS Color Theme
color.active=on color4
color.alternate=on color0
color.blocked=on color8
color.blocking=color0 on color7
color.burndown.done=on color12
color.burndown.pending=on color6
color.burndown.started=on color2
color.calendar.due=color0 on color1
color.calendar.due.today=color15 on color1
color.calendar.holiday=bold color1 on color10
color.calendar.overdue=color0 on color9
color.calendar.today=color15 on color12
color.calendar.weekend=on color235
color.calendar.weeknumber=color4
color.debug=color5
color.due=color1
color.due.today=color1 on color0
color.error=color15 on color1
color.footnote=color3
color.header=color3
color.history.add=color15 on color6
color.history.done=color15 on color12
color.history.delete=color15 on color5
color.overdue=color9
color.recurring=color14
color.scheduled=color15 on color8
color.summary.background=color15 on color6
color.summary.bar=color0 on color12
color.sync.added=color10
color.sync.changed=color11
color.sync.rejected=color9
color.tag.next=color3
color.tagged=color7
color.uda.priority.H=color15
color.uda.priority.M=color7
color.uda.priority.L=color8
color.undo.after=color2
color.undo.before=color1
color.warning=bold red

# reports
report.dtl.description=Project report by urgency and date
report.dtl.columns=id,priority,due.relative,description.truncated_count,project,tags,depends,urgency
report.dtl.sort=project-/,urgency-,tags,due+,depends+
report.dtl.filter=status:pending

report.wk.description=Report for task due during the week
report.wk.columns=id,priority,due.relative,description.truncated_count,project,depends
report.wk.sort=project-/,urgency-,due+,depends+
report.wk.filter=status:pending and due.before:7d

# date formats
dateformat=d-m-yTH:N
# contexts
alias.@=context
context.shopped=project:shopped
context.me=project:home or project:personal
context.custom=project:customization or project:automation
context.unv=project:shopped or project:unv
context.study=+quiz or +exam or +presentation
context.vm=project:vm
default.command=dtl due.before:7d
