# reports
report.dtl.description=Project report by urgency and date
report.dtl.columns=id,description.truncated,urgency,project,tags,depends,priority,due.relative
report.dtl.sort=depends+,urgency-,due+,tags,project-/
report.dtl.filter=status:pending

report.wk.description=Report for task due during the week
report.wk.columns=id,description.truncated,urgency,project,tags.count,depends.count,priority,due.relative
report.wk.sort=depends+,urgency-,due+,tags,project-/
report.wk.filter=status:pending and due.before:7d

# date formats
dateformat=d-m-yTH:N
# contexts
alias.@=context

context.custom=project:customization or project:automation
context.me=project:home or project:personal
context.study=+quiz or +exam or +presentation
context.unv=project:unv or +quiz or +exam or +presentation

default.command=dtl
